<?xml version="1.0"?>
<style type="text/css">
<![CDATA[

body
{
    background: white;
    font-family: "Times New Roman", Times, serif;
}

body, a.hidden
{
    color: black;
}

.titlePage
{
    font-family: Verdana, Arial, Helvetica, sans-serif;
}

h1, h2, h3, h4, h5, h6, .h1, .h2, .h3, .h4
{
    color: black;
    font-family: Verdana, Arial, Helvetica, sans-serif;
}

p.byline
{
    font-style: italic;
    margin-bottom: 2em;
}

p
{
    margin: 0;
    text-indent: 1em;
}

p.first, p.tocChapter
{
    text-indent: 0em;
}

p.byline
{
    text-indent: 0em;
}

.figureHead, .noteref, .pseudonoteref, .marginnote, p.legend, .versenum, .stage
{
    color: black;
}

.rightnote, .pagenum, .linenum, .pagenum a
{
    color: black;
}

p.dropcap:first-letter
{
    color: black;
    font-weight: bold;
}

sub, sup 
{ 
    line-height: 0;
}

.lg .linenum, .sp .linenum
{
    left: 1.58em;
    color: black;
}

.pglink
{
    background: inherit;
    background-image: none;
    padding-right: 0;
}

.catlink
{
    background: inherit;
    background-image: none;
    padding-right: 0;
}

.exlink
{
    background: inherit;
    background-image: none;
    padding-right: 0;
}

.pglink:hover
{
    background-color: inherit;
}

.catlink:hover
{
    background-color: inherit;
}

.exlink:hover
{
    background-color: inherit;
}

span.corr, span.abbr, span.measure
{
    border-bottom: 0;
}

/* add margins to various text elements */
.lg, .lgouter, .epigraph, .argument, .table, .figure, .sp
{
    padding: 0;
    margin-top: 1.58em;
    margin-bottom: 1.58em;
}

/* suppress margin: auto usage */
.lgouter
{
    margin-left: 4%;
    margin-right: 0;
}

.hr, .figure, .figAnnotation, p.tb, hr.tb, .epigraph, table
{
    margin-left: 0;
    margin-right: 0;
}


/* restore original margins on floating images */
.floatLeft
{
    margin:10px 10px 10px 0;
}

.floatRight
{
    margin:10px 0 10px 10px;
}


]]>
</style>
