   <x:scenario label="When normalizing a table with all bottom cells spanned">
      <x:context mode="normalize-table">
        <table id="simple_table_extra_spanned_row"
               rend="summary(A straighforward table to demonstrate tables in TEI) class(verticalBorderInside)">
            <column/>
            <column/>
            <column/>
            <row>
                <cell>2</cell>
                <cell>7</cell>
                <cell>6</cell>
            </row>
            <row>
                <cell>9</cell>
                <cell>5</cell>
                <cell>1</cell>
            </row>
            <row>
                <cell rows="2">4</cell>
                <cell rows="2">3</cell>
                <cell rows="2">8</cell>
            </row>
        </table>
      </x:context>
      <x:expect label="will return in a table with additional row and cell attributes, indicating the position of the cells">
