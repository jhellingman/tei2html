               rows="3"
               headrows="0"
               cols="4">
           <column/>
           <column/>
           <column/>
           <column/>
           <row>
              <cell row="1" col="1">2</cell>
              <cell row="1" col="2">7</cell>
              <cell row="1" cols="2" col="3">6</cell>
           </row>
           <row>
              <cell row="2" col="1">9</cell>
              <cell row="2" col="2">5</cell>
              <cell row="2" cols="2" col="3">1</cell>
           </row>
           <row>
              <cell row="3" col="1">4</cell>
